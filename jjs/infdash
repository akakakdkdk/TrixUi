local oldTick = tick -- Backup da função original
local hookEnabled = false
local fakeTime = oldTick()

-- Esta é a nossa função customizada
local function myNewTick(...)
    if hookEnabled then
        fakeTime = fakeTime + 100
        return fakeTime
    end
    return oldTick(...) -- Se estiver desativado, retorna o tick real
end

-- Aplicamos o hook apenas uma vez
hookfunction(tick, myNewTick)

-- No seu script da Toggle:
-- Quando LIGAR:
hookEnabled = true

-- Quando DESLIGAR:
hookEnabled = false
